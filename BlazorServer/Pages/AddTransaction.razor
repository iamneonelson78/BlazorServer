@page "/AddTransaction"
@inject ITimekeepingService transactionService
@inject IEmployeeService empService
@inject ITransactionTypeService typeService
@inject NavigationManager NavigationManager

<h3>AddTransaction</h3>

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Gender" class="control-label"></label>
                <select class="form-control" @bind="@objTransaction.EmployeeId">
                    <option value="">-- Select Employee --</option>
                    @if ((empObj != null))
                        @foreach (var emp in empObj)
                        {
                            <option value="@emp.EmployeeId">@emp.FirstName, @emp.LastName</option>
                        }
                    }
                </select>
            </div>


            <div class="form-group">
                <label for="TransactionDateTime" class="control-label">Transaction Date Time</label>
                <input type="date" form="TransactionDateTime" class="form-control" @bind="@objTransaction.TransactionDateTime" />
            </div>
            <div class="form-group">
                <label for="TransactionDateTime" class="control-label">Current Date Time</label>
                <input form="TransactionDateTime" class="form-control" @bind="@objTransaction.TransactionDateTime" />
            </div>


            <div class="form-group">
                <label for="Gender" class="control-label"></label>
                <select class="form-control" @bind="@objTransaction.TransactionTypeId">
                    <option value="">-- Select Transaction --</option>
                    @if ((typeObj != null))
                        @foreach (var typeO in typeObj)
                        {
                            <option value="@typeO.TransactionTypeId">@typeO.TransactionTypeName</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateTransaction" value="Submit" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {

    TimeKeepingTransaction objTransaction = new TimeKeepingTransaction();

    List<Employee> empObj;
    List<TransactionType> typeObj;

    protected override async Task OnInitializedAsync()
    {
        empObj = await Task.Run(() => empService.GetAllEmployeesAsync());
        typeObj = await Task.Run(() => typeService.GetAllTransactionTypesAsync());
    }


    protected async void CreateTransaction()
    {
        await transactionService.InsertTransactionAsync(objTransaction);
        NavigationManager.NavigateTo("TimekeepingTransactions");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("TimekeepingTransactions");
    }
}
